    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Home - Acceso de Coders</title>
    <meta name="description" content="Proyecto final del parcial, Seguridad de Redes">
    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Catamaran:100,200,300,400,500,600,700,800,900">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:100,100i,300,300i,400,400i,700,700i,900,900i">

    <header class="masthead text-center text-white">
        <div class="text-center masthead-content">
            <div class="container">
                <h1 class="masthead-heading mb-0">Crea tu cuenta</h1>
                <h2 class="masthead-subheading mb-0"></h2>
                
                <div>
                    <form action="/users/singup" method="POST">
                    <div class="form-group"><input class="form-control-lg" type="text" required="" placeholder="Ingresa Tu Nombre" name="nombre" style="margin: 0px;margin-bottom: 15px;" value="{{nombre}}"></div>
                    <div class="form-group"><input class="form-control-lg" type="email" placeholder="Email" name="email" value="{{email}}"></div>
                    <div class="form-group"><input class="form-control-lg" type="password" required="" placeholder="Password" name="password" style="margin-bottom: 15px;" value="{{password}}"></div>
                    <div class="form-group"><input class="form-control-lg" type="password" required="" placeholder="Confirma Password" name="confirm_password" value="{{confirm_password}}"></div>
                    <div class="form-group"><button class="btn btn-success btn-xl rounded-pill mt-5" id="ingresar" type="submit" style="text-align: center;" >Crear Cuenta</button></div>
                    </form>
                </div>
            </div>
        </div>
        <div class="bg-circle-1 bg-circle"></div>
        <div class="bg-circle-2 bg-circle"></div>
        <div class="bg-circle-4 bg-circle"></div>
        <div class="bg-circle-3 bg-circle"></div>
    </header>
    
